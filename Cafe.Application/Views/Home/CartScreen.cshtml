@{
    ViewBag.Title = "CartScreen";
}

<div class="container my-5 text-center" id="emptyCartSection">
    <br /><br />
    <h1 class="mt-5">
        <i class="fas fa-shopping-cart"></i>
    </h1>
    <h4>Your Cart is empty</h4>
</div>
<div class="container my-4" id="cartSection">
    <div class="row mt-4">
        <div class="col-8">
            <h3>CART</h3>
            <div class="border rounded" id="item-list">
            </div>
        </div>
        <div class="col-4">
            <h3>SUMMARY</h3>
            <div class="px-3 py-2 border rounded">
                <div class="d-flex mt-2 border-bottom pb-1">
                    <h5 class="flex-grow-1">Total Quantity</h5>
                    <h5 class="text-secondary" id="total-quantity"></h5>
                </div>
                <div class="d-flex mt-3">
                    <h5 class="flex-grow-1">Sub Total Price</h5>
                    <h5 class="text-secondary" id="sub-total-price"></h5>
                </div>
                <div class="d-flex mt-3 border-bottom pb-1">
                    <h5 class="flex-grow-1">Shipping Charge</h5>
                    <h5 class="text-secondary" id="shipping-charge">$0</h5>
                </div>
                <div class="d-flex mt-3 pb-1">
                    <h5 class="flex-grow-1">Total Price</h5>
                    <h5 class="text-secondary" id="total-price"></h5>
                </div>
            </div>
            <div class="mt-5">
                <h3>SHIPPING INFORMATION</h3>
                <form class="py-2 px-3 border rounded" action="/Home/Payment" method="post">
                    <div class="form-group mb-4">
                        <label for="name">Name</label>
                        <input type="text" class="txtSearch mt-1" name="name" placeholder="Enter name..." />
                    </div>
                    <div class="form-group mb-4">
                        <label for="name">Email</label>
                        <input type="email" class="txtSearch mt-1" name="email" placeholder="Enter email..." />
                    </div>
                    <div class="form-group mb-4">
                        <label for="name">Contact number</label>
                        <input type="text" class="txtSearch mt-1" name="contact" placeholder="Enter contact number..." />
                    </div>
                    <div class="form-group">
                        <label for="name">Address</label>
                        <input type="text" class="txtSearch mt-1" name="address" placeholder="Enter address..." />
                    </div>
                    <input type="hidden" name="totalPrice" id="totalPrice" />
                    <div class="form-group text-center mt-4 mb-2">
                        <button class="btn btn-success w-100" type="submit" id="pay"></button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>